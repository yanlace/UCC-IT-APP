<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:background="@drawable/layout_view_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Title :"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discrete Mathemarics"
                android:gravity="center"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Term :"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_course_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester I"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code:"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_course_course_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MTH103"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit:"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_course_credit_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pre-Request Course:"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_pre_request_course"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ITT102 Discrete Mathematics"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>